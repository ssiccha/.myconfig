#!/bin/bash
ln -sv ${PWD}/bash/bashrc ${HOME}/.bashrc
ln -sv ${PWD}/bash/local_bashrc ${HOME}/.local_bashrc
ln -sv ${PWD}/bash/aliases ${HOME}/.bash_aliases
ln -sv ${PWD}/bash/profile ${HOME}/.bash_profile
ln -sv ${PWD}/bash/logout ${HOME}/.bash_logout
ln -sv ${PWD}/bash/vim_bash_env ${HOME}/.vim_bash_env

ln -sv ${PWD}/readline_inputrc ${HOME}/.inputrc

ln -sv ${PWD}/gitconfig ${HOME}/.gitconfig
echo "git config --global init.templatedir '~/.git_template'"
git config --global init.templatedir '~/.git_template'
ln -sv ${PWD}/git_template ${HOME}/.git_template

ln -sv ${PWD}/sshconfig ${HOME}/.ssh/config

ln -sv ${PWD}/tmux.conf ${HOME}/.tmux.conf

# This is broken
ln -sv ${PWD}/nvim ${XDG_CONFIG_HOME}

mkdir -p ${HOME}/.gap
ln -sv ${PWD}/gap/gap.ini ${HOME}/.gap/gap.ini
ln -sv ${PWD}/gap/gaprc ${HOME}/.gap/gaprc
